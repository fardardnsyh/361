---
import * as m from '@/paraglide/messages'
import { Icon } from 'astro-icon/components'

import { localizePathname } from '@/linking'
import { languageTag } from '@/paraglide/runtime'
---

<div class="drawer">
  <input id="sidemenu" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">
    <label for="sidemenu" class="">
      <Icon
        name="majesticons:menu"
        tabindex="0"
        class="btn btn-sm btn-ghost btn-primary border-[.5px] border-neutral-200"
      />
    </label>
  </div>
  <div class="drawer-side">
    <label for="sidemenu" aria-label="Fechar sidemenu" class="drawer-overlay"
    ></label>
    <div
      class="menu p-4 w-80 min-h-full bg-[#0E1337] flex flex-col justify-between gap-4"
    >
      <div>
        <div class="drawer-header flex justify-center my-5">
          <img src="/favicon.svg" alt="Zapred icon" width="64" />
        </div>
        <ul class="flex flex-col gap-2">
          <li>
            <a href={localizePathname('/', languageTag())}>{m.linkLabelHome}</a>
          </li>
          <li>
            <a href={localizePathname('/projects', languageTag())}
              >{m.linkLabelProjects}</a
            >
          </li>
          <li>
            <a href={localizePathname('/#contact', languageTag())}
              >{m.linkLabelContact}</a
            >
          </li>
        </ul>
      </div>

      <footer
        class="h-[60px] text-white flex justify-center items-center font-light"
      >
        <p>Â© 2024 Andrew Domingues</p>
      </footer>
    </div>
  </div>
</div>

<style>
  svg {
    height: 48px;
    width: 48px;
    font-size: 48px;
    cursor: pointer;
  }
  a {
    font-size: large;
  }
</style>
